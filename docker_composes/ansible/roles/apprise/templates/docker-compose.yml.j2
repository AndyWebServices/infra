---
# GENERATED BY {{ container_name }} ROLE!!!

services:
  apprise-api:
    image: lscr.io/linuxserver/apprise-api:latest
    container_name: {{ container_name }}
    labels:
      - traefik.enable=true
      # https access
      - traefik.http.routers.{{ container_name }}.rule=Host(`${URL}`)
      - traefik.http.routers.{{ container_name }}.entrypoints=websecure
      - traefik.http.routers.{{ container_name }}.tls=true
      - traefik.http.routers.{{ container_name }}.tls.certresolver=letsencrypt
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ tz }}
      - APPRISE_ATTACH_SIZE=1000
    volumes:
      - {{ ansible_env.HOME }}/docker/composes/{{ container_name }}-docker/config/:/config
      - {{ ansible_env.HOME }}/docker/composes/{{ container_name }}-docker/attachments/:/attachments
    ports:
      - 8000
    networks:
      - {{ network_name }}
    restart: unless-stopped

networks:
  {{ network_name }}:
    external: true
