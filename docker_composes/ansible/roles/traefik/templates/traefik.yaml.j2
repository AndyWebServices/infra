---
# GENERATED BY {{ container_name }} ROLE!!!
global:
  checkNewVersion: false
  sendAnonymousUsage: false

log:
  level: DEBUG

api:
  dashboard: true
  insecure: true

entryPoints:
  web:
    address: :80
    # Redirect all HTTP to HTTPS
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: :443

certificatesResolvers:
  zerossl:
    acme:
      caServer: "https://acme.zerossl.com/v2/DV90"
      email: {{ admin_email }}
      storage: /var/traefik/certs/zerossl-acme.json
      dnsChallenge:
        provider: cloudflare
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"
      eab:
        kid: {{ eab_kid }}
        hmacEncoded: {{ eab_hmac_key }}
      certificatesDuration: 30
      # Uncomment the below after features are released
      # clientTimeout: 300s
      # clientResponseHeaderTimeout: 300s
  letsencrypt:
    acme:
      email: {{ admin_email }}
      storage: /var/traefik/certs/letsencrypt-acme.json
      dnsChallenge:
        provider: cloudflare
        # For some reason, some of my hosts fail to detect TXT record propagation in a timely manner. This is possibly
        # caused by NextDNS. My workaround is to have traefik wait 5min, and then call certbot without checking again
        propagation:
          delayBeforeChecks: 300s
          disableChecks: true
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"

providers:
  docker:
    exposedByDefault: false
    network: lsio
  file:
    directory: /etc/traefik
    watch: true
