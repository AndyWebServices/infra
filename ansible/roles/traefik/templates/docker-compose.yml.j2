---
services:
  traefik:
    image: docker.io/library/traefik:latest
    container_name: {{ container_name }}
    ports:
      - {{ public_ipv4 }}:80:80
      - "[{{ public_ipv6 }}]:80:80"
      - {{ public_ipv4 }}:443:443
      - "[{{ public_ipv6 }}]:443:443"
      - {{ tailscale_ipv4 }}:8080:8080
      - "[{{ tailscale_ipv6 }}]:8080:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /home/ubuntu/docker/composes/{{ container_name }}/config/:/etc/traefik/:ro
      - /home/ubuntu/docker/composes/{{ container_name }}/certs/:/var/traefik/certs/:rw
    environment:
      - CF_DNS_API_TOKEN=${CF_DNS_API_TOKEN}
    networks:
      - {{ network_name }}
    restart: unless-stopped

networks:
  {{ network_name }}:
    external: true  # <-- (Optional) Change this to false if you want to create a new network
